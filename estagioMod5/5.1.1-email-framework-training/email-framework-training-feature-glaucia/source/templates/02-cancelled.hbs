<!DOCTYPE html
  PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:v="urn:schemas-microsoft-com:vml">
<!-- partial:partials/html-head.hbs -->
<!-- partial -->

<body>
  <table id="body-table" width="100%" border="0" cellpadding="0" cellspacing="0" style="max-width: 640px">

    <tr>
    <td align="center" valign="top">
    <tr>
      <!-- Header -->
      <!-- partial:partials/header.hbs -->
      <!-- partial -->
    </tr>
    <tr>
      <td class="tc" style="display: flex;justify-content: center;">
        <img class="w-80 bt b--white bw3 mt3" style="width: 453px;height: 54px; margin:auto; padding:32px"
          src="https://acctglobal.vteximg.com.br/arquivos/ids/181521/gm-cancelado-hering.png"
          style="width: 453px;height: 54px; margin:auto" />
      </td>
    </tr>
    <tr>
      <td class="intro-messege" style="font-weight: normal;font-size: 12px;line-height: 16px; color: #000000;
          padding-left: 73px;padding-right: 92px;">
        <p class="mt4" style="margin-left:25px">((i18n.order.titleCancelled)) {{clientProfileData.firstName}} :(</p>
      </td>
    </tr>
    <tr>
      <td class="intro-messege" style="font-weight: normal;font-size: 12px;line-height: 16px; color: #000000;
          padding-left: 73px;padding-right: 92px;">
        <p class="mt2" style="margin-left:25px">((i18n.order.cancelledIntroMessage)) {{orderId}}
          ((i18n.order.cancelled))</p>
      </td>
    </tr>
    <tr>
      <td class="intro-messege" style="font-weight: normal;font-size: 12px;line-height: 16px; color: #000000;
          padding-left: 73px;padding-right: 92px;">
        <p class="mt3" style="margin-left:25px">((i18n.payment.refundDeadline))</p>
      </td>
    </tr>
    <tr>
      <td class="intro-messege" style="font-weight: normal;font-size: 12px;line-height: 16px; color: #000000;
          padding-left: 73px;padding-right: 92px;">
        <p class="mv3" style="margin-left:25px">((i18n.payment.refundReceipt))</p>
      </td>
    </tr>
    <tr>
      <td class="intro-messege" style="font-weight: normal;font-size: 12px;line-height: 16px; color: #000000;
          padding-left: 73px;padding-right: 92px;">
        <p class="ph4" style="padding: 0px; margin-left:25px">((i18n.payment.creditCardRefund))</p>
      </td>
    </tr>
    <tr>
      <td class="w-100 ph4 pt3 lh-copy">
        <!-- partial:partials/order-summary.hbs -->
        <!-- partial -->
      </td>

      <td class="w-100 ph4 lh-copy">
        {{#each items}}
        {{#eq @index "0"}}
        {{#richShippingData shippingData}}
        {{#group logisticsInfo by="addessId"}}
        <div class="cb fn pt3">
          <!-- Packages -->
          {{#group items by="packageId"}}
          {{#compare item.length '>' 1}}
          <h3 class="mb2">((i18n.package.title)) {{#math index '+' 1}}{{/math}}</h3>
          {{/compare}}
          <!-- partial:partials/items.hbs -->
          <!-- partial -->
          {{/group}}
        </div>
        {{/group}}
        {{/richShippingData}}
        <!-- partial:partials/line.hbs -->
        <!-- partial -->
      </td>
    </tr>
    <tr>
      <td class="w-100 ph4 pv3 lh-copy">
        <!-- partial:partials/payment.hbs -->
        <!-- partial -->
      </td>
    </tr>
    {{/eq}}
    {{/each}}

    <tr>
      <td class="tc pa4" style="padding:0px;">
        <button class="access-order-button" style="border: none;   
                display:flex; justify-content:left; margin-left:88px; margin-bottom:50.5px; ">
          <a style="height:22px;font-weight:400;font-size:16px;color:#000;text-decoration:underline">
            ((i18n.order.accessOrder))
          </a>
        </button>
      </td>
    </tr>
    <tr class="w-100 ph4-ns mw6">
      <!-- partial:partials/footer.hbs -->
      <!-- partial -->
    </tr>
    </td>
    </tr>
  </table>
</body>
</html>