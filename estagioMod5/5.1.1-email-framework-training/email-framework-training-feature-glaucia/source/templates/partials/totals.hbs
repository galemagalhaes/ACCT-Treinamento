<div class="fl w-100 mw6 pb3 v-top">
  <h4>((i18n.common.summary))</h4>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    {{#each totals}}
      {{#if value}}
        <tr>
          <td class="pt1 pb2 bb b--light-gray">
            {{#eq id "Items"}}
            {{../subjectItemAttachment.totalItems}}
            {{#eq ../subjectItemAttachment.totalItems 1}}
              Item
              {{else}}
              ((i18n.common.items))
            {{/eq}}
            {{/eq}}
            {{#eq id "Shipping"}}((i18n.common.shipping)){{/eq}}
            {{#eq id "Tax"}}((i18n.common.taxes)){{/eq}}
            {{#eq id "Discounts"}}((i18n.common.discounts)){{/eq}}
          </td>
          <td class="pt1 pb2 bb b--light-gray tr">((i18n.common.currency)) {{formatCurrency value}}</td>
        </tr>
      {{else}}
        {{#eq id "Shipping"}}
          <tr>
            <td class="pt1 pb2 bb b--light-gray">
              ((i18n.common.shipping))
            </td>
            <td class="pt1 pb2 bb b--light-gray custom-green tr">Gr√°tiss</td>
          </tr>
        {{/eq}}
      {{/if}}
    {{/each}}
    {{#if value}}
      <tr>
        <td class="pt1 pb2 fw5 bb b--light-gray">((i18n.common.total))</td>
        <td class="pt1 pb2 fw5 bb b--light-gray align-right tr">((i18n.common.currency)) {{formatCurrency value}}</td>
      </tr>
    {{/if}}
  </table>
</div>
