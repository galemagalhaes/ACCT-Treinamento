{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#rodape-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#meu-perfil",
      "vtex.menu@2.x:menu#footer-auti-books",
      "vtex.menu@2.x:menu#footer-politicas",
      "vtex.menu@2.x:menu#footer-bags",
      "vtex.menu@2.x:menu#menu-social-media"
    ],
    "props": {
      "blockClass": "menu-row"
    }
  },

  "flex-layout.row#social-networks": {
    "props":{
      "width":"20%",
      "blockClass": "social-networks"
    },
    "children":[

      "flex-layout.col#linkedin",
      "flex-layout.col#facebook",
      "flex-layout.col#instagram",
      "flex-layout.col#twitter"]
  },

  "flex-layout.col#facebook":{
    "props":{
      "width": "20%",
      "blockClass":"social-networks"
    }, "children":["image#facebook"]
  },
 "image#facebook": {
   "props":{
     "blockClass":"social-networks",
     "src": "assets/icons/facebook.png",
     "link": {
       "props":{
         "url": "https://www.facebook.com"
       }
     }
   }
 },
 "flex-layout.col#linkedin":{
  "props":{
    "width": "20%",
    "blockClass":"social-networks"
  }, "children":["image#linkedin"]
},
 "image#linkedin": {
  "props":{
    "blockClass":"social-networks",
    "src": "assets/icons/linkedin.png"
  }
},
"flex-layout.col#instagram":{
  "props":{
    "width": "20%",
    "blockClass":"social-networks"
  }, "children":["image#instagram"]
},
"image#instagram": {
  "props":{
    "blockClass":"social-networks",
    "src": "assets/icons/instagram.png"
  }
},
"flex-layout.col#twitter":{
  "props":{
    "width": "20%",
    "blockClass":"social-networks"
  }, "children":["image#twitter"]
},
"image#twitter": {
  "props":{
    "blockClass":"social-networks",
    "src": "assets/icons/twitter.png"
  }
},
"flex-layout.row#rodape-desktop": {
  "props":{
    "blockClass": "rodape-desktop",
    "fullWidth": false
  }, "children":["flex-layout.col#rodape-desktop-1", "flex-layout.col#rodape-desktop-2"]
},
"flex-layout.col#rodape-desktop-1": {
  "props":{
    "blockClass":"rodape-desktop",
    "width":"70%"
  },"children":["rich-text#rodape-desktop"]

},
"rich-text#rodape-desktop": {
  "props":{
    "blockClass":"rodape-desktop",
    "text": "© Copyright 2022 Audiobooks Brasil S.A. CNPJ nº:31.357.547/0001-72"
  }
},"flex-layout.col#rodape-desktop-2": {
  "props":{
    "blockClass":"rodape-desktop",
    "width":"30%"
  },"children":["image#vtex-footer"]
},







  "social-networks": {
    "props": {
      "title": "SIGA-NOS",
      "showInColor": false,
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "flex-layout.row#footer-mobile",
      "flex-layout.row#rodape-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "onde é isso?",
      "blockClass": "footer"
    }
  },
  "flex-layout.row#footer-mobile":{
    "props":{
      "blockClass":"footer-mobile"
    },
    "children":["image#logo-footer-mobile"]
  },
  "image#logo-footer-mobile": {
    "props":{
      "blockClass":"auti-footer",
      "src": "assets/icons/logo-auti-mobile.png"}
  },
  "flex-layout.row#rodape-mobile":{
    "props":{
      "blockClass":"rodape-mobile"
    },
    "children":["image#vtex-footer"]
  },
  "image#vtex-footer": {
    "props":{
      "blockClass":"vtex-footer",
      "src": "assets/icons/vtex.png"

    }
  }
}
